block title
  h1 Danh sách bộ sưu tập 
block content
  if thanhcong
    .alert.alert-danger= thanhcong
  .box
    .box-body
      .row
        .col-lg-12.col-md-12
          .buttons-toolbar
          #toolbar
            //- a.btn.btn-success.button-manager(href='/admin/collection/add')
            //-   i.fa.fa-plus
            //-   |  Tạo 
            //- button#remove_collection.btn.btn-danger.button-manager(disabled='')
            //-   i.fa.fa-trash
            //-   |  Xóa 
            a(href='').btn.btn-default.button-manager
              i.fa.fa-refresh
              |  Refresh 
          .row#box_filter_collection(style="margin-top: 7px")
            .col-lg-4.col-md-4
              label Tìm kiếm
              .form-group
                input#search.form-control(type='text' placeholder='title...' name='search' autocomplete="off")
            .col-lg-2.col-md-2
              .form-group
                label Tìm kiếm theo trạng thái
                select#order.select2.form-control.status-selection(name='order')
                  option(value='') Tất cả
                  option(value='0') On
                  option(value='1') Off
            .col-lg-2.col-md-2  
              .form-group
                label Bắt đầu
                .input-group.date
                  .input-group-addon
                    i.fa.fa-calendar
                  input#start_date.datepicker.form-control.pull-right(type='text' name="start_date" autocomplete="off")
            .col-lg-2.col-md-2  
              .form-group
                label Kết thúc
                .input-group.date
                  .input-group-addon
                    i.fa.fa-calendar
                  input#end_date.datepicker.form-control.pull-right(type='text' name="end_date" autocomplete="off")
