        function formatState (opt) {
          var optimage = $(opt.element).attr('data-image'); 
          if(!optimage){
          return opt.text;
          } else {                    
              var $opt = $(
              '<span><img src="' + optimage + '" width="18px" /> ' + opt.text + '</span>'
              );
              return $opt;
          }
        };

