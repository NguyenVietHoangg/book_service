- var admin_name = global.sessionAdmin ? global.sessionAdmin.email : null
header.main-header
  // Logo
  a.logo(href='/')
    // mini logo for sidebar mini 50x50 pixels
    span.logo-mini
      b C
      | MS
    // logo for regular state and mobile devices
    span.logo-lg
      b !{basics.cmsTitle}
  // Header Navbar: style can be found in header.less
  nav.navbar.navbar-static-top
    // Sidebar toggle button
    a.sidebar-toggle(data-toggle='push-menu', href='#', role='button')
      span.sr-only Toggle navigation
    .navbar-custom-menu
      ul.nav.navbar-nav
        // User Account: style can be found in dropdown.less
        li.dropdown.user.user-menu
          a.dropdown-toggle(data-toggle='dropdown', href='#')
            img.user-image(src='/admin/images/fire.png', alt='User Image')
            span.hidden-xs #{admin_name}
          ul.dropdown-menu
            // User image
            li.user-header
              img.img-circle(src='/admin/images/fire.png', alt='User Image')
              p
                | #{admin_name}
                // Menu Footer
                li.user-footer
                  .pull-right
                    form(method='post' action='/admin/logout') 
                      input.btn.btn-default.btn-flat(type='submit' value='logout')