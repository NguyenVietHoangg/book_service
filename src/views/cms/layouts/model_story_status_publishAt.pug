#myModalStatusPublishAt.modal
  .modal-dialog
    .modal-content
      .modal-header
        span.modal-title(style="font-size:18px") Cập nhật thời gian Published  &nbsp;           
      .modal-body(style="margin-bottom:10px") 
        input(id='showStoryId' type='hidden')         
        .col-lg-12.col-md-12
          .col-lg-3.col-md-3              
            button.btn.btn-success.btnNow( type='button' style="background-color:green") Ngay lập tức          
          .col-lg-9.col-md-9
            .col-lg-2.col-md-2     
              b SetTime         
            .col-lg-10.col-md-10         
              input(id= 'inputshow' name='publishedAtModel' type='datetime-local' value="")      
      .modal-footer
        button.btn.btn-danger.btnapplyshow( data-dismiss='modal' style="background-color:green") Apply
        button.btn.btn-danger.btncancelshow( data-dismiss='modal' style="background-color:blue") Cancel
script(type='text/javascript').

    $('.btnNow').on('click', function(){       
      let storyId = $('#showStoryId').val()  // 216      
      $.ajax(
          {
            url: "/Story/updatePublishedAt",    
            method: "post",
            data:
            {         
              storyid: storyId              
            },
            success: function (res) {              
              if(res == 'Update thành công') {                
                window.location.href = ''
              }                              
            }
          });            
    });


    $('.btnapplyshow').on('click', function(){ 
      let storyId = $('#showStoryId').val()  // 216
      let datetime = document.getElementById("inputshow").value
      $.ajax(
          {
            url: "/Story/updatePublishedAtSetTime",    
            method: "post",
            data:
            {         
              storyid: storyId,
              publishedAt: datetime              
            },
            success: function (res) {              
              if(res == 'Update thành công') {                
                window.location.href = ''
              }                              
            }
          });            
      
    });

    
